<!DOCTYPE html>
<html lang="en">
<head>
    <title>iMovieUi Admin | List of Movie Characters</title>
    <link href="/img/favicon.ico" rel="icon" type="image/x-icon" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="/css/tree.view.css"/>
    <link rel="stylesheet" href="/css/admin/custom.css"/>
</head>

<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery">
<main class="wrapper">
    <header>
        <% include partials/header.ejs %>
    </header>
    <div class="container" style="margin-top: 60px;">
        <div class="text-center jumbotron">
            <a href="/admin/create/character" class="btn btn-primary btn-lg">Create New </a>
        </div>

        <table id="movieCharactersTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>Name</th>
                <th>Played By</th>
                <th>Type</th>
                <th>Sex</th>
                <th>Movie</th>
                <th>Year</th>
                <th>IMDb Rating</th>
                <th>Edit</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>Name</th>
                <th>Played By</th>
                <th width="10%">Type</th>
                <th>Sex</th>
                <th>Year</th>
                <th>IMDb Rating</th>
                <th>Edit</th>
            </tr>
            </tfoot>
            <tbody>
            <% movieCharacters.forEach(function(character){ %>
            <tr>
                <td><%= character.name %></td>
                <td><%= character.playedBy %></td>
                <td width="10%"><p class="one-line"><%= character.type %></p></td>
                <td width="10%"><p class="one-line"><%= character.sex %></p></td>
                <td><%= character.movies[0].name %></td>
                <td><%= character.movies[0].year %></td>
                <td><%= character.movies[0].IMDbRating %></td>
                <td><a href="/admin/edit/character/<%= character._id %>"> <i class="fa fa-edit"></i></a></td>
            </tr>
            <% }) %>

            </tbody>
        </table>
    </div>
</main>

<script src="/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js" type="text/javascript"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#movieCharactersTable').DataTable();
    });
</script>
</body>