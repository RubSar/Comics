<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>

</head>

<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery" ng-app="iMovieUi">
<main class="wrapper" ng-controller="UserRatesCtrl">
    <header>
        <% include partials/header.ejs %>
    </header>

    <div class="container mt-100 mb-50" ng-controller="UserRatesCtrl">

        <input type="hidden" ng-value="isAuthProp =isAuthenticated()">

        <div ng-hide="contentLoaded" class="lazy-load-box">
            <i class="fa fa-spin fa-cog fa-5x"></i>
        </div>
        <div class="row" ng-show="contentLoaded">

            <div class="container">
                <div class="text-center">
                    <h2 class="g-heading">
                        Movie Characters Rated
                        <small>by</small>
                        <strong>Me</strong>
                    </h2>
                </div>

                <div class="row">
                    <ul class="nav nav-tabs">

                        <li ng-repeat="rating in topRatings track by $index">
                            <a ng-click="getRates(rating._id)" href="#">
                                <p><strong ng-bind="rating._id"></strong> <i class="fa fa-star"></i></p>
                                <span ng-bind="rating.count"></span>
                            </a>
                        </li>

                    </ul>
                </div>
                <div class="row form-group" ng-repeat="rate in curentRates track by rate._id">
                    <div class="col-md-3">
                        <img ng-src="{{rate.characterId.imgUrl}}" class="img-responsive noselect img-center">
                    </div>
                    <div class="col-md-9">
                        <h2 ng-bind="rate.characterId.name"></h2>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <footer>
        <% include partials/footer.ejs %>
    </footer>

    <% include partials/scripts.ejs %>
    <script>
        $(function () {
            App.init();
        });
    </script>
</main>
</body>
</html>