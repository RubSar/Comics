<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>

</head>

<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery" ng-app="iMovieUi">
<main class="wrapper" ng-controller="MovieCharacterCtrl">
    <header>
        <% include partials/header.ejs %>
    </header>
    <div class="our-tours text-center g-heading-v8 g-pt-85 g-pb-100">
        <div class="container-fluid">
            <h2 class="h2"> Most Popular movie <strong> characters</strong></h2>

            <div ng-hide="contentLoaded" style="min-height: 550px; padding-top:200px;" class="text-center">
                <img src="/img/loading.gif" alt="loading"/>
            </div>
            <div class="our-tours-list-wrapper" ng-show="contentLoaded">
                <div class="our-tours-list text-left">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <mc-dropdown items-list="artists" model="artist" term="_id"
                                                     label="Artist"></mc-dropdown>
                                    </div>
                                    <div class="col-md-6">
                                        <mc-dropdown items-list="years" model="year" term="_id"
                                                     label="year"></mc-dropdown>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="row" ng-repeat="row in topCharacters">
                                    <div class="col-md-6" ng-repeat="character in row track by character._id"
                                         style="margin-bottom: 15px;">
                                       <character model="character"></character>
                                    </div>
                                </div>
                                <div class="form-group text-center">
                                    <button type="button" ng-click="getAll()">Get All Characters</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


        <footer>
            <% include partials/footer.ejs %>
        </footer>
        <% include partials/scripts.ejs %>

    </div>
</main>
</body>
</html>