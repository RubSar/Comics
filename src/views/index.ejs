<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
</head>
<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery">
<main class="wrapper">
    <header>
        <% include partials/header.ejs %>
    </header>
    <div class="our-tours text-center g-heading-v8 g-pt-85 g-pb-100" id="Our-Tours">
        <div class="container-fluid">
            <h2 class="h2"><em class="block-name">Our Tours</em><br> <strong>We can</strong> offer</h2>
            <div class="our-tours-list-wrapper">
                <div class="our-tours-list text-left">
                    <!-- Batman  -->
                    <% for(var i=0; i<characters.length; i++){ %>
                    <div class="our-tours-list-item">
                        <div class="img-wrapper img-wrapper--shadow">
                            <img src="<%= characters[i].imgUrl%>"  class="img-reposnsive">
                        </div>
                        <h3><%= characters[i].name%>    <small>  /  <%= characters[i].type[0]%></small></h3>
                        <ul class="list-inline star-vote">
                            <li><i class="g-color-default fa fa-star"></i></li>
                            <li><i class="g-color-default fa fa-star"></i></li>
                            <li><i class="g-color-default fa fa-star-half-o"></i></li>
                            <li><i class="g-color-default fa fa-star-o"></i></li>
                            <li><i class="g-color-default fa fa-star-o"></i></li>
                        </ul>
                        <p><%= characters[i].description%></p>
                        <div class="our-tours-price">
                            <a style="color:white" href="/<%= characters[i].name%>">See more</a>
                        </div>

                    </div>
                    <% }%>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <% include partials/footer.ejs %>
    </footer>

    <% include partials/scripts.ejs %>
</main>
</body>
</html>