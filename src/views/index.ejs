<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
    <link rel="stylesheet" href="/css/owl.carousel.css"/>
</head>
<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery" ng-app="iMovieUi">
<main class="wrapper" ng-controller="HomeCtrl">
    <header>
        <% include partials/header.ejs %>
    </header>
    <input type="hidden" ng-value="isAuthProp =isAuthenticated()">

    <div class="text-center pt-85 pb-100">
        <div class="container-fluid">

            <h2 class="g-heading"><strong>Comics based</strong> Movies</h2>

            <div class="comics-characters-list-wrapper">
                <div class="comics-character-list text-left">
                    <% characters.forEach(function(character){ %>
                    <div class="comics-character-list-item">
                        <div class="img-wrapper img-wrapper--shadow">
                            <img src="<%= character.imgUrl %>" class="img-responsive">
                        </div>
                        <h3><%= character.name %>
                            <small style="color: #fff"> / <%= character.type %></small>
                        </h3>
                        <p><%= character.description %></p>

                        <div class="our-tours-price">
                            <a style="color:white" href="/comics-character/<%= character.name %>">See more</a>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>

        </div>
    </div>

    <div class="text-center  pt-85 pb-100">
        <h2 class="g-heading"><strong>Most popular movie</strong> Characters</h2>

        <div class="container">
            <div class="row" ng-repeat="row in movieCharacters">
                <div class="col-md-6 col-sm-6 " ng-repeat="item in row track by item._id"
                     style="min-height: 100px;margin-bottom: 15px;">
                    <character model="item"></character>
                </div>
            </div>


            <div class="text-left">
                <a href="/most-popular-movie-characters/" class="btn btn-lg btn-primary">
                    See More Movie Characters
                </a>
            </div>

        </div>

    </div>


    <footer>
        <% include partials/footer.ejs %>
    </footer>

    <% include partials/scripts.ejs %>


    <script src="/js/owl.carousel.min.js" type="text/javascript"></script>
    <script src="/js/init-owl-carousel.js" type="text/javascript"></script>
    <script>
        $(function () {

            App.init();
            OwlCarousel.initOwlCarousel();
        });
    </script>

</main>
</body>
</html>