<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
</head>
<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery" ng-app="iMovieUi">
<main class="wrapper">
    <header>
        <% include partials/header.ejs %>
    </header>


    <div class="container" style="margin-top: 100px" ng-controller="ComicsCharacterCtrl">
        <div class="row">
            <div class="col-md-3">
                <div class="character-box">
                    <img ng-src="{{character.imgUrl}}" class="img-responsive"/>
                   <div class="character-info">
                      <div class="info">
                          <h4>{{character.name}} <small style="color: #fff">/ {{character.type}}</small></h4>
                          <span>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                          </span>
                          <p>{{character.description}} lorem ipsum dolor set ime tay</p>

                      </div>
                   </div>
                </div>
            </div>

            <div class="col-md-9">

                <div class="row">
                    <div class="col-md-3" ng-repeat="artist in character.actors track by $index">
                        <div class="artist-info">
                          <div class="artist-image-wrapper">
                              <img ng-src="{{artist.imgUrl}}" class="img-responsive img-center noselect"/>
                              <span ng-hide="voteStart" class="vote-box" ng-class="{'in-progress': (voteStart && current ==$index)}" ng-click="rate(artist._id, $index)"><i class="fa fa-chevron-circle-up"></i>  Vote</span>
                              <span ng-show="voteStart" class="vote-box" ng-class="{'in-progress': voteStart}" ng-click="rate(artist._id)"><i class="fa fa-spinner"></i> </span>
                          </div>
                            <h4 style="margin-bottom: 0">{{artist.firstName}} {{artist.lastName}}</h4>
                            <div><i><strong>{{artist.votesCount}}</strong></i> users vote</div>
                        </div>
                        <div class="artist-movies">
                            <div ng-repeat="movie in artist.movies track by $index">
                                <div class="row">
                                    <div class="col-md-8 col-md-offset-2">
                                        <img ng-src="{{movie.posterUrl}}" class="img-responsive">
                                    </div>
                                </div>
                                <h5>{{movie.name}}
                                    <small>({{movie.year}})</small>
                                </h5>
                                <i>iMDb Rating (<strong>{{movie.IMDbRating}}/10</strong>) </i>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <footer>
        <% include partials/footer.ejs %>
    </footer>

    <% include partials/scripts.ejs %>
</main>
</body>
</html>