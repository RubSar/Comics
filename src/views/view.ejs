<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
</head>
<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery">
<main class="wrapper">
    <header>
        <% include partials/header.ejs %>
    </header>


  <div class="container" style="margin-top: 100px">
      <div class="row" >
          <div class="col-md-4">
              <img src="<%=character.imgUrl%>" class="img-responsive"/>
          </div>
          <div class="col-md-8">
              <div class="tabs-container">
                  <ul class="nav nav-tabs">
                      <%  var isFirst =true %>
                      <% character.actors.forEach(function(actor){ %>

                      <%  var className = isFirst ? "active" : '' %>
                      <li class="<%= className %>">
                          <a data-toggle="tab" href="#<%= actor.firstName %>" aria-expanded="false">
                              <%= actor.firstName %>
                              <%= actor.lastName %>
                          </a>
                      </li>
                      <%   isFirst =false %>
                      <% }) %>
                      <%   isFirst =true %>
                  </ul>
                  <div class="tab-content">
                      <% character.actors.forEach(function(actor){ %>
                      <% var className = isFirst ? "active" : '' %>
                      <div id="<%= actor.firstName %>" class="<%= className %>  tab-pane">
                          <div class="panel-body">
                              <div class="row">
                                  <div class="col-md-4">
                                      <img src="<%= actor.imgUrl%>" class="img-responsive"/>

                                       <h3><%=actor.firstName%>  <%=actor.lastName%></h3>

                                  </div>
                                  <div class="col-md-8">
                                      <% actor.movies.forEach(function(movie){ %>
                                      <img src="<%=movie.posterUrl%>" height="100">
                                      <p><%=movie.name%></p>
                                      <p><%=movie.year%></p>
                                      <%})%>
                                  </div>
                              </div>



                          </div>
                      </div>
                      <%   isFirst =false %>
                      <% }) %>

                  </div>
              </div>
          </div>
      </div>
  </div>
    <footer>
        <% include partials/footer.ejs %>
    </footer>

    <% include partials/scripts.ejs %>
</main>
</body>
</html>