<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
</head>
<body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery">
<main class="wrapper">
    <header>
        <% include partials/header.ejs %>
    </header>


    <div class="container" style="margin-top: 100px">
        <div class="row">
            <!--<div class="col-md-4">-->
            <!--<img src="<%= character.imgUrl %>" class="img-responsive"/>-->
            <!--</div>-->
            <div class="col-md-12">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <% var isFirst = true %>
                        <% character.actors.forEach(function(actor){ %>

                        <% var className = isFirst ? "active" : '' %>
                        <li class="<%= className %>">

                            <a data-toggle="tab" href="#<%= actor.firstName %>" aria-expanded="false">
                                <img src="<%= actor.imgUrl %>" class="img-responsive">
                                <button type="submit" class="btn btn-primary btn-block"
                                        style="display: block; margin:5px 0;">Vote
                                </button>
                                <%= actor.firstName %>
                                <%= actor.lastName %>
                            </a>
                        </li>
                        <% isFirst = false %>
                        <% }) %>
                        <% isFirst = true %>
                    </ul>
                    <div class="tab-content">
                        <% character.actors.forEach(function(actor){ %>
                        <% var className = isFirst ? "active" : '' %>
                        <div id="<%= actor.firstName %>" class="<%= className %>  tab-pane">
                            <div class="panel-body">

                                <% actor.movies.forEach(function(movie){ %>
                                <div class="row">
                                    <div class="col-md-3">
                                        <img src="<%= movie.posterUrl %>" height="250">

                                        <h3><strong><%= movie.name %></strong>
                                            (<%= movie.year %>)
                                        </h3>

                                        <p>IMDb Rating : <strong><%= movie.IMDbRating %>/10</strong></p>

                                    </div>
                                    <div class="col-md-9">

                                        <% movie.awards.forEach(function(award){ %>
                                        <div class="row" style="margin-bottom:10px">
                                            <div class="col-md-4">
                                                <p><%= award.name %> (<%= award.year %>)</p>
                                            </div>
                                            <div class="col-md-4">
                                                <p><%= award.nomination %> </p>
                                            </div>
                                            <div class="col-md-4">
                                                <p>
                                                    <% award.winners.forEach(function(winner){ %>
                                                    <%= winner %>
                                                    <% }) %>
                                                </p>
                                            </div>
                                        </div>
                                        <% }) %>

                                    </div>
                                </div>
                                <hr>
                                <% }) %>

                            </div>
                        </div>
                        <% isFirst = false %>
                        <% }) %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <% include partials/footer.ejs %>
    </footer>

    <% include partials/scripts.ejs %>
</main>
</body>
</html>